<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- saas.instance list view -->
        <record id="saas_instance_view_list" model="ir.ui.view">
            <field name="name">saas.instance.view.list</field>
            <field name="model">saas.instance</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="subdomain"/>
                    <field name="db_name"/>
                    <field name="odoo_version"/>
                    <field name="server_id"/>
                    <field name="plan_id"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- saas.instance form view -->
        <record id="saas_instance_view_form" model="ir.ui.view">
            <field name="name">saas.instance.view.form</field>
            <field name="model">saas.instance</field>
            <field name="arch" type="xml">
                <form string="SaaS Instance">
                    <header>
                        <button name="action_deploy_instance" string="Deploy" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_suspend_instance" string="Suspend" type="object" invisible="state != 'running'"/>
                        <button name="action_resume_instance" string="Resume" type="object" invisible="state != 'suspended'"/>
                        <button name="action_cancel_instance" string="Cancel" type="object" invisible="state not in ['draft', 'running', 'suspended']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,deploying,running,suspended,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="subdomain"/>
                                <field name="db_name"/>
                                <field name="odoo_version"/>
                            </group>
                            <group>
                                <field name="server_id"/>
                                <field name="plan_id"/>
                                <field name="partner_id"/>
                                <field name="state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <field name="domain"/>
                                    <field name="custom_domain"/>
                                    <field name="is_custom_domain_active"/>
                                </group>
                                <group>
                                    <button name="action_activate_custom_domain" string="Activate" type="object" invisible="is_custom_domain_active"/>
                                    <button name="action_deactivate_custom_domain" string="Deactivate" type="object" invisible="not is_custom_domain_active"/>
                                </group>
                                <group>
                                    <field name="url"/>
                                    <field name="active_user_count"/>
                                    <field name="expiration_date"/>
                                    <field name="is_trial"/>
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- saas.instance action window -->
        <record id="saas_instance_action" model="ir.actions.act_window">
            <field name="name">SaaS Instances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saas.instance</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new SaaS instance.
                </p>
            </field>
        </record>
    </data>
</odoo> 