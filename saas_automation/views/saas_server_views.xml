<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- saas.server list view -->
        <record id="saas_server_view_list" model="ir.ui.view">
            <field name="name">saas.server.view.list</field>
            <field name="model">saas.server</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="server_type"/>
                    <field name="host"/>
                    <field name="port"/>
                    <field name="max_clients"/>
                    <field name="total_clients"/>
                    <field name="is_active"/>
                </list>
            </field>
        </record>

        <!-- saas.server form view -->
        <record id="saas_server_view_form" model="ir.ui.view">
            <field name="name">saas.server.view.form</field>
            <field name="model">saas.server</field>
            <field name="arch" type="xml">
                <form string="SaaS Server">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="server_type"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="host"/>
                                <field name="port"/>
                                <field name="ssh_user"/>
                                <field name="ssh_password" password="True"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="max_clients"/>
                                <field name="total_clients"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- saas.server action window -->
        <record id="saas_server_action" model="ir.actions.act_window">
            <field name="name">SaaS Servers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saas.server</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new SaaS server.
                </p>
            </field>
        </record>
    </data>
</odoo> 