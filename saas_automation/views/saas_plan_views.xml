<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- saas.plan list view -->
        <record id="saas_plan_view_list" model="ir.ui.view">
            <field name="name">saas.plan.view.list</field>
            <field name="model">saas.plan</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="price_monthly"/>
                    <field name="price_yearly"/>
                    <field name="max_users"/>
                    <field name="max_instances"/>
                    <field name="is_active"/>
                </list>
            </field>
        </record>

        <!-- saas.plan form view -->
        <record id="saas_plan_view_form" model="ir.ui.view">
            <field name="name">saas.plan.view.form</field>
            <field name="model">saas.plan</field>
            <field name="arch" type="xml">
                <form string="SaaS Plan">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="is_active"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="price_monthly"/>
                                <field name="price_yearly"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="max_users"/>
                                <field name="max_instances"/>
                            </group>
                            <group>
                                <field name="included_modules_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- saas.plan action window -->
        <record id="saas_plan_action" model="ir.actions.act_window">
            <field name="name">SaaS Plans</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saas.plan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new SaaS plan.
                </p>
            </field>
        </record>
    </data>
</odoo> 