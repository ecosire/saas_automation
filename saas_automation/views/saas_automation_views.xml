<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_saas_automation_tree" model="ir.ui.view">
        <field name="name">saas.automation.tree</field>
        <field name="model">saas.automation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model"/>
                <field name="trigger"/>
                <field name="is_active"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="view_saas_automation_form" model="ir.ui.view">
        <field name="name">saas.automation.form</field>
        <field name="model">saas.automation</field>
        <field name="arch" type="xml">
            <form string="SaaS Automation Rule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model"/>
                        <field name="trigger"/>
                        <field name="condition"/>
                        <field name="action"/>
                        <field name="is_active"/>
                        <field name="sequence"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_saas_automation" model="ir.actions.act_window">
        <field name="name">SaaS Automation</field>
        <field name="res_model">saas.automation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define automation rules and actions for SaaS operations.
            </p>
        </field>
    </record>

    <menuitem id="menu_saas_automation_action" name="Automation" parent="menu_saas_root" action="action_saas_automation" sequence="70"/>
</odoo> 