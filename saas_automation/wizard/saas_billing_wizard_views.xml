<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Billing Wizard Form View -->
        <record id="view_saas_billing_wizard_form" model="ir.ui.view">
            <field name="name">saas.billing.wizard.form</field>
            <field name="model">saas.billing.wizard</field>
            <field name="arch" type="xml">
                <form string="SaaS Billing Operations">
                    <group>
                        <group string="Billing Configuration">
                            <field name="billing_type"/>
                            <field name="billing_date"/>
                            <field name="due_date"/>
                            <field name="payment_terms_id"/>
                        </group>
                        <group string="Customer Selection">
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="subscription_ids" widget="many2many_tags"/>
                            <field name="include_trials" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <group string="Invoice Options">
                            <field name="auto_confirm" widget="boolean_toggle"/>
                            <field name="send_email" widget="boolean_toggle"/>
                            <field name="include_usage_details" widget="boolean_toggle"/>
                            <field name="apply_discounts" widget="boolean_toggle"/>
                        </group>
                        <group string="Advanced Options">
                            <field name="currency_id"/>
                            <field name="fiscal_position_id"/>
                            <field name="journal_id"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="preview_line_ids" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_preview_billing" string="Preview" type="object" class="btn-secondary"/>
                        <button name="action_generate_invoices" string="Generate Invoices" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Billing Wizard Action -->
        <record id="action_saas_billing_wizard" model="ir.actions.act_window">
            <field name="name">SaaS Billing Operations</field>
            <field name="res_model">saas.billing.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_billing_type': 'subscription'}</field>
        </record>

        <!-- Menu Item for Billing Wizard -->
        <menuitem id="menu_saas_billing_wizard"
                  name="Billing Operations"
                  parent="saas_automation.menu_saas_billing_action"
                  action="action_saas_billing_wizard"
                  sequence="10"/>

    </data>
</odoo> 