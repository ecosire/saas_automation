<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="saas_backup_restore_wizard_view_form" model="ir.ui.view">
            <field name="name">saas.backup.restore.wizard.view.form</field>
            <field name="model">saas.backup.restore.wizard</field>
            <field name="arch" type="xml">
                <form string="Backup/Restore Instance">
                    <sheet>
                        <group>
                            <group string="Operation Settings">
                                <field name="operation_type"/>
                                <field name="instance_id"/>
                                <field name="backup_type" invisible="operation_type == 'restore'"/>
                            </group>
                            <group string="Backup Options" invisible="operation_type == 'restore'">
                                <field name="include_logs"/>
                                <field name="compression"/>
                                <field name="backup_notes"/>
                            </group>
                            <group string="Restore Options" invisible="operation_type == 'backup'">
                                <field name="backup_file" filename="backup_filename"/>
                                <field name="backup_filename" invisible="1"/>
                                <field name="restore_path"/>
                                <field name="overwrite_existing"/>
                            </group>
                        </group>
                        <group string="Progress" invisible="progress == 0">
                            <field name="progress" widget="progressbar"/>
                            <field name="status_message" readonly="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_execute_operation" string="Execute" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_saas_backup_restore_wizard" model="ir.actions.act_window">
            <field name="name">Backup/Restore Instance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saas.backup.restore.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_saas_backup_restore_wizard"
                  name="Backup/Restore"
                  parent="saas_menu_instances"
                  action="action_saas_backup_restore_wizard"
                  sequence="2"/>
    </data>
</odoo> 