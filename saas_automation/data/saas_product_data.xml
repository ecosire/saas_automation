            <field name="invoice_policy">order</field>
            <field name="saas_plan_id" ref="saas_plan_standard"/>
        </record>

        <record id="saas_product_premium" model="product.template">
            <field name="name">SaaS Premium Plan</field>
            <field name="list_price">99.99</field>
            <field name="type">service</field>
            <field name="invoice_policy">order</field>
            <field name="saas_plan_id" ref="saas_plan_premium"/>
        </record>
    </data>
